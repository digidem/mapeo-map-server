{
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "ESNext.Promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noEmitOnError": true,
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "pretty": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
